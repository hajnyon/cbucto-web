{% if isHome %}
<footer class="bg-slate-950 text-slate-500 py-12 border-t border-slate-800">
    <div class="container mx-auto px-4 text-center md:text-left">
        <div class="grid md:grid-cols-4 gap-8 mb-8">
            <div class="col-span-1 md:col-span-2">
                <span class="text-2xl font-bold text-white tracking-tighter mb-4 block">CB<span class="text-lime-500">Účto</span></span>
                <p class="max-w-xs text-sm">
                    Profesionální účetní služby, daňová optimalizace a digitální zpracování dokladů.
                </p>
            </div>
            <div>
                <h5 class="text-white font-bold mb-4">Rychlé odkazy</h5>
                <ul class="space-y-2 text-sm">
                    <li><a href="#sluzby" class="hover:text-lime-400 transition-colors">Služby</a></li>
                    <li><a href="#cenik" class="hover:text-lime-400 transition-colors">Ceník</a></li>
                    <li><a href="#blog" class="hover:text-lime-400 transition-colors">Blog</a></li>
                    <li><a href="#kontakt" class="hover:text-lime-400 transition-colors">Kontakt</a></li>
                </ul>
            </div>
            <div>
                <h5 class="text-white font-bold mb-4">Právní info</h5>
                <ul class="space-y-2 text-sm">
                    <li>IČO: {{ site.ico }}</li>
                    <li>Spisová značka C 15152<br>vedená u Krajského soudu<br>v Českých Budějovicích</li>
                </ul>
            </div>
        </div>
        <div class="border-t border-slate-900 pt-8 flex flex-col md:flex-row justify-between items-center text-xs">
            <p>&copy; {{ year }} {{ site.name }} Všechna práva vyhrazena.</p>
        </div>
    </div>
</footer>
{% else %}
<footer class="bg-slate-950 text-slate-500 py-12 border-t border-slate-800">
    <div class="container mx-auto px-4 text-center">
        <span class="text-2xl font-bold text-white tracking-tighter mb-4 block">CB<span class="text-lime-500">Účto</span></span>
        <p class="text-sm mb-4">Profesionální účetní služby v Českých Budějovicích</p>
        <p class="text-xs">&copy; {{ year }} {{ site.name }} Všechna práva vyhrazena.</p>
    </div>
</footer>
{% endif %}
