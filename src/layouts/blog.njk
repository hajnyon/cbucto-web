{% extends "layouts/base.njk" %}
{% from "partials/icons.njk" import chevronLeft %}

{% block head %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ articleTitle }}",
    "description": "{{ articleSubtitle }}",
    "datePublished": "{{ dateISO }}",
    "author": {
        "@type": "Person",
        "name": "{{ site.owner }}"
    },
    "publisher": {
        "@type": "Organization",
        "name": "{{ site.name }}",
        "url": "{{ site.url }}"
    }
}
</script>
{% endblock %}

{% block body %}
{% include "partials/nav.njk" %}

<main id="main-content">
<article class="pt-32 pb-20">
    <div class="container mx-auto px-4 md:px-6 max-w-4xl">

        <!-- Breadcrumb -->
        <nav aria-label="Breadcrumb" class="mb-8 text-sm">
            <ol class="flex items-center flex-wrap">
                <li><a href="{{ basePath }}/index.html" class="text-slate-500 hover:text-lime-600">Domů</a></li>
                <li aria-hidden="true" class="mx-2 text-slate-400">/</li>
                <li><a href="{{ basePath }}/index.html#blog" class="text-slate-500 hover:text-lime-600">Blog</a></li>
                <li aria-hidden="true" class="mx-2 text-slate-400">/</li>
                <li aria-current="page" class="text-slate-700">{{ breadcrumb }}</li>
            </ol>
        </nav>

        <!-- Article Header -->
        <header class="mb-12">
            <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1 {{ categoryBadgeClass }} rounded-full text-sm font-medium">{{ category }}</span>
                <time datetime="{{ dateISO }}" class="text-slate-500 text-sm">{{ date }}</time>
            </div>
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-slate-900 leading-tight mb-6 break-words">
                {{ articleTitle }}
            </h1>
            <p class="text-xl text-slate-600 leading-relaxed">
                {{ articleSubtitle }}
            </p>
        </header>

        {% block featuredImage %}{% endblock %}

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none">
            <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 md:p-12 shadow-lg border border-white/50 space-y-8">
                {% block articleContent %}{% endblock %}
            </div>
        </div>

        <!-- Author & Back -->
        <div class="mt-12 flex flex-col md:flex-row items-center justify-between gap-6 p-6 bg-white/60 rounded-2xl border border-white/80">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-lime-200 rounded-full flex items-center justify-center" aria-hidden="true">
                    <span class="text-lg font-bold text-lime-700">MN</span>
                </div>
                <div>
                    <p class="font-bold text-slate-900">Monika Novotná</p>
                    <p class="text-sm text-slate-500">Jednatelka {{ site.name }}</p>
                </div>
            </div>
            <a href="{{ basePath }}/index.html#blog" class="text-lime-600 font-bold hover:underline flex items-center gap-2">
                {{ chevronLeft("w-4 h-4") }}
                Zpět na blog
            </a>
        </div>

    </div>
</article>
</main>

{% include "partials/footer.njk" %}
{% endblock %}
